generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model City {
  id                Int      @id @default(autoincrement())
  name              String
  slug              String   @unique
  state             String
  airport_code      String?
  airport_city_slug String?
  lat               Float?
  lon               Float?
  is_active         Boolean  @default(true)
  originRoutes      Route[]  @relation("OriginCity")
  destinationRoutes Route[]  @relation("DestinationCity")
}

model Route {
  id                  Int      @id @default(autoincrement())
  origin_city_id      Int
  destination_city_id Int
  is_airport_route    Boolean  @default(false)
  distance_km         Float?
  duration_min        Int?
  is_active           Boolean  @default(true)
  origin              City     @relation("OriginCity", fields: [origin_city_id], references: [id])
  destination         City     @relation("DestinationCity", fields: [destination_city_id], references: [id])
  fares               Fare[]
  bookings            Booking[]
  @@unique([origin_city_id, destination_city_id])
}

model Fare {
  id                  Int      @id @default(autoincrement())
  route_id            Int
  car_type            String   // enum simulated: HATCHBACK|SEDAN|SUV
  base_fare_inr       Int
  night_surcharge_pct Int      @default(0)
  updated_at          DateTime @default(now())
  route               Route    @relation(fields: [route_id], references: [id])
}

model ContentToken {
  id        Int      @id @default(autoincrement())
  key       String   @unique
  scope     String?
  targetId  Int?
  json      String?  // stored as JSON string
  updatedAt DateTime @default(now())
}

model Offer {
  id          Int      @id @default(autoincrement())
  code        String   @unique
  title       String?
  description String?
  discount_type String  // FLAT | PCT
  value       Int
  cap_inr     Int?
  conditions  String?   // JSON string (e.g., {"city":"raipur"})
  active      Boolean  @default(true)
  valid_from  DateTime?
  valid_to    DateTime?
}

model Driver {
  id          Int         @id @default(autoincrement())
  name        String
  phone       String      @unique
  car_type    String      // enum simulated
  vehicle_no  String?
  active      Boolean     @default(true)
  assignments Assignment[]
}

model Booking {
  id               Int            @id @default(autoincrement())
  route_id         Int
  origin_text      String
  destination_text String
  pickup_datetime  DateTime
  car_type         String        // enum: HATCHBACK | SEDAN | SUV
  fare_quote_inr   Int
  fare_locked_inr  Int            @default(0)
  payment_mode     String        @default("COD")       // enum: COD | ONLINE
  status           String        @default("PENDING")   // enum: PENDING | ASSIGNED | COMPLETED | CANCELLED
  customer_name    String?
  customer_phone   String
  discount_code    String?
  // UTM attribution (captured from first touch cookie, optional)
  utm_source       String?
  utm_medium       String?
  utm_campaign     String?
  created_at       DateTime       @default(now())
  route            Route          @relation(fields: [route_id], references: [id])
  assignments      Assignment[]
}

model Assignment {
  id         Int      @id @default(autoincrement())
  booking_id Int
  driver_id  Int
  status     String   @default("ASSIGNED")
  created_at DateTime @default(now())
  booking    Booking  @relation(fields: [booking_id], references: [id])
  driver     Driver   @relation(fields: [driver_id], references: [id])
  @@unique([booking_id, driver_id])
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  passwordHash String
  created_at   DateTime @default(now())
}

// NOTE: SQLite connector does not support Prisma native enums; using String columns with documented value sets.
